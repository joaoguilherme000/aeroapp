<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f02f5b"
    android:orientation="vertical"
    tools:context=".Bandio2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/baseline_chevron" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="330sp"
            android:text="Sign Up"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camera" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/baseline_person"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="80"
        android:padding="20sp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/baseline_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="20sp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/baseline_key"
        android:hint="Passoword"
        android:inputType="textPassword"
        android:maxLength="80"
        android:padding="20sp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/edtNiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/baseline_card_giftcard"
        android:hint="Birthday"
        android:inputType="date"
        android:maxLength="80"
        android:padding="20sp"
        android:textColorHint="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#EC3737"
        android:drawableLeft="@drawable/baseline_person_add"
        android:paddingLeft="100sp" />


</LinearLayout>